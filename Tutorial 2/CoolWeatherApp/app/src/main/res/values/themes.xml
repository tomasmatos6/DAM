<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.CoolWeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name ="android:statusBarColor" >?attr/colorPrimaryVariant</item >
        <!-- Customize your light theme here. -->

        <item name="background">@color/viewBG</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Day" parent="Theme.CoolWeatherApp">
        <item name="android:windowBackground">@drawable/clear_day</item>
    </style>

    <style name="Theme.Night" parent ="Theme.CoolWeatherApp" >
        <item name ="android:windowBackground">@drawable/clear_night</item >
    </style >

    <style name="Theme.CoolWeatherApp" parent="Base.Theme.CoolWeatherApp"/>
</resources>